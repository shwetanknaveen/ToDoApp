<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.AlarmManagement"
    android:background="@drawable/created_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewAlarmDetail"
            android:layout_marginTop="@dimen/spacing_150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_20dp"
            android:fontFamily="cursive"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_30" />
        <Button
            android:id="@+id/btnAlarmTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:background="@drawable/rounded_corner_no_background"
            android:fontFamily="monospace"
            android:text="ALARM TIME"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSetAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:layout_marginTop="@dimen/margin_15dp"
            android:background="@drawable/rounded_corner_no_background"
            android:text="SET ALARM"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCancelAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:layout_marginTop="@dimen/margin_15dp"
            android:background="@drawable/rounded_corner_no_background"
            android:text="CANCEL ALARM"
            android:textStyle="bold" />
    </LinearLayout>



</FrameLayout>